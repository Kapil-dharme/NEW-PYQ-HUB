<% if (locals.success) { %>
<div id="pyq-success"
    class="fixed top-18 right-2 z-50 bg-white rounded-xl shadow-xl border-2 border-blue-200 overflow-hidden transform transition-all duration-300"
    role="alert" style="animation: popIn 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55)">

    <!-- Header with icon -->
    <div class="bg-gradient-to-r from-blue-50 to-indigo-100 px-4 py-3 border-b border-blue-200 flex items-center">
        <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center shadow-sm">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd"
                    d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                    clip-rule="evenodd" />
            </svg>
        </div>
        <p class="ml-3 text-sm font-bold text-blue-900">Success!</p>
        <button onclick="removeAlert('pyq-success')"
            class="ml-auto text-blue-400 hover:text-blue-600 focus:outline-none transition-colors">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                    d="M6 18L18 6M6 6l12 12" />
            </svg>
        </button>
    </div>

    <!-- Content -->
    <div class="px-4 py-3">
        <p class="text-sm text-gray-700">
            <%= locals.success %>
        </p>
    </div>

    <!-- Progress bar -->
    <div class="h-1 bg-blue-600 pyq-progress"></div>
</div>

<style>
    @keyframes popIn {
        0% {
            opacity: 0;
            transform: scale(0.8) translateY(-20px);
        }
        100% {
            opacity: 1;
            transform: scale(1) translateY(0);
        }
    }

    @keyframes progressShrink {
        from { width: 100%; }
        to { width: 0%; }
    }

    .pyq-progress {
        animation: progressShrink 5s linear forwards;
    }
</style>

<script>
    function removeAlert(id) {
        const alert = document.getElementById(id);
        if (alert) {
            alert.style.animation = 'fadeOut 0.3s ease-out';
            setTimeout(() => alert.remove(), 300);
        }
    }

    setTimeout(() => removeAlert('pyq-success'), 2500);
</script>
<% } %>